# Environment Configuration Template
# Copy this file to .env and fill in your values

# Database Configuration
# DATABASE_URL is automatically provided by Replit
DATABASE_URL=postgresql://...

# Redis Configuration for BullMQ Workers
# For production: Use Redis Cloud, Railway, or similar Redis service
# For development: Leave empty to disable workers
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Background Workers
# Set to 'true' in production or when you want to enable workers
ENABLE_WORKERS=false

# AWS S3 Configuration for File Uploads
# Required for production file storage - get these from AWS Console
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# Session Configuration
# Generate a secure random string for production
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Replit Authentication (automatically configured)
# REPLIT_DOMAINS=...
# ISSUER_URL=...
# REPL_ID=...

# Application Environment
NODE_ENV=development

# Server Configuration
PORT=5000
HOST=0.0.0.0

# File Upload Configuration
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=.jpg,.jpeg,.png,.gif,.pdf,.doc,.docx,.txt,.zip

# Email Service Configuration (Optional)
EMAIL_SERVICE=
EMAIL_FROM=
EMAIL_API_KEY=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Development Flags
DEBUG_MODE=false
LOG_LEVEL=info